# Discord Bot Configuration
# Get your token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Command prefix (default: !)
COMMAND_PREFIX=!

# Whisper Configuration
# Available models: tiny, base, small, medium, large, large-v2, large-v3, distil-large-v3
WHISPER_MODEL=large-v3
WHISPER_BATCH_SIZE=12
# Language for transcription (ja=Japanese, en=English, auto=auto-detect)
WHISPER_LANGUAGE=ja

# Ollama Configuration
# Run 'ollama list' to see available models
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_HOST=http://localhost:11434

# Recording Settings
# Maximum recording duration in seconds (default: 7200 = 2 hours)
MAX_RECORDING_DURATION_SECONDS=7200
# Automatically delete audio files after processing (true/false)
AUTO_DELETE_RECORDINGS=true

# Summary language (ja=Japanese, en=English)
SUMMARY_LANGUAGE=ja

# Long Audio Processing (for 2+ hour recordings)
# Duration of each chunk in minutes when splitting long audio
CHUNK_DURATION_MINUTES=5
# Maximum parallel transcription tasks
MAX_CONCURRENT_TRANSCRIPTIONS=2

# LLM Context Settings
# Maximum characters before triggering hierarchical summarization
MAX_CONTEXT_CHARS=12000

# Progress update interval in seconds
PROGRESS_UPDATE_INTERVAL_SECONDS=30
